#!/bin/bash

if [[ $# == 0 ]]; then
  echo "Please add an argument for the source folder"
  exit
fi

source_folder=$1
echo "source_folder: "$source_folder

if [ -d $source_folder  ]; then
  echo "OK: source folder is a folder"
else
  echo "ERROR: source folder is not a folder"
  exit
fi

. is_peregrine

on_peregrine=`is_peregrine`
echo "on_peregrine: "$on_peregrine

skip_install=1
echo "skip_install: "$skip_install

##########################
# Update other packages
##########################

if [[ $skip_install == 0 ]]; then
  jobid=`sbatch install_r_packages.sh | cut -d ' ' -f 4`
  echo "jobid: "$jobid
fi

##########################
# Update this package
##########################

if [[ $skip_install == 0 ]]; then
  cmd="sbatch --dependency=afterok:$jobid install_this_r_package.sh"
  echo "cmd: "$cmd
  jobid=`$cmd | cut -d ' ' -f 4`
  echo "jobid: "$jobid
fi

##########################
# Check parameter file creation success
##########################

if [[ $skip_install == 0 ]]; then
  cmd="sbatch --dependency=afterany:$jobid collect_files_parameters.sh"
  echo "cmd: "$cmd
  jobid=`$cmd | cut -d ' ' -f 4`
else
  #cmd="sbatch collect_files_parameters.sh "$source_folder
  cmd="./collect_files_parameters "$source_folder
  if [[ $on_peregrine == 1 ]]; then 
    cmd="sbatch "$cmd
  fi
  echo "cmd: "$cmd
  jobid=`$cmd | cut -d ' ' -f 4`
fi

echo "jobid: "$jobid

exit 

##################
# Collect n taxa #
##################

cmd="sbatch --dependency=afterany:$jobid collect_n_taxa.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

############################
# Collect n species trees
############################

cmd="sbatch --dependency=afterany:$jobid collect_n_species_trees.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

############################
# Collect n alignments
############################

cmd="sbatch --dependency=afterany:$jobid collect_files_n_alignments.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

############################
# Collect n posteriors
############################

cmd="sbatch --dependency=afterany:$jobid collect_files_n_posteriors.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

##########################
# Analysis
##########################

cmd="sbatch --dependency=afterany:$jobid collect_esses.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid collect_gammas.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid collect_nrbss.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid collect_nltts.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid collect_nltt_stats.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid collect_times.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid analyse_esses.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid analyse_nltt_stats.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid analyse_time.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid

cmd="sbatch --dependency=afterany:$jobid send_me_an_email.sh"
echo "cmd: "$cmd
jobid=`$cmd | cut -d ' ' -f 4`
echo "jobid: "$jobid
